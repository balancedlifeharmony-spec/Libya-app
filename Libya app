                    <div class="tag" style="margin-top:6px">Tip: For Jooble, some browsers require a small server proxy due to CORS.</div>
                  </div>

                  <script>
                    /* ==================== DATA: Curated sources ==================== */
                    if (!window.JOB_SOURCES) {
                        window.JOB_SOURCES = [
                          // Libya-focused
                          {name:"LibyanJobs.ly â€” Ù…ÙˆÙ‚Ø¹ Ø§Ù„ØªÙˆØ¸ÙŠÙ Ø§Ù„Ù„ÙŠØ¨ÙŠ", url:"https://libyanjobs.ly/", cat:"Libya Sites", langs:["ar","en"]},
                          {name:"LibyaCV â€” ÙˆØ¸Ø§Ø¦Ù Ù„ÙŠØ¨ÙŠØ§", url:"https://www.libyacv.com/", cat:"Libya Sites", langs:["ar"]},
                          {name:"LinkedIn Jobs â€” Libya", url:"https://www.linkedin.com/jobs/jobs-in-libya", cat:"Libya Sites", langs:["en"]},

                          // MENA boards
                          {name:"Bayt â€” Libya Jobs", url:"https://www.bayt.com/en/libya/jobs/", cat:"MENA Boards", langs:["ar","en"]},
                          {name:"Tanqeeb â€” Libya", url:"https://libya.tanqeeb.com/en", cat:"MENA Boards", langs:["ar","en"]},
                          {name:"Wzayef â€” Libya", url:"https://www.wzayef.com/en/jobs/libya", cat:"MENA Boards", langs:["ar","en"]},
                          {name:"NaukriGulf â€” Libya", url:"https://www.naukrigulf.com/jobs-in-libya", cat:"MENA Boards", langs:["en"]},

